      <div class="absolute inset-0 hero-grid opacity-30"></div>

      <!-- Content -->
      <div class="relative max-w-4xl mx-auto px-4 text-center">
        <h1 class="text-3xl lg:text-5xl font-bold text-[#0B2360] mb-4">
          Wybierz idealny pakiet dla swojego klubu
        </h1>
        <p class="text-lg text-gray-600 mb-8 max-w-2xl mx-auto">
          Proste, przejrzyste ceny. Bez ukrytych kosztów. Zmień pakiet w każdej
          chwili.
        </p>

        <!-- Pricing Toggle -->
        <div class="flex items-center justify-center space-x-4 mb-4">
          <span class="text-gray-700 font-medium">Waluta:</span>
          <select
            id="currency-select"
            class="bg-white border border-gray-300 rounded-lg px-3 py-2 text-gray-700"
          >
            <option value="PLN">PLN</option>
            <option value="USD">USD</option>
            <option value="EUR">EUR</option>
          </select>

          <span class="text-gray-700 font-medium ml-6">Miesięcznie</span>
          <div class="relative">
            <input type="checkbox" id="billing-toggle" class="sr-only" />
            <label
              for="billing-toggle"
              class="flex items-center cursor-pointer"
            >
              <div class="relative">
                <div class="block bg-gray-300 w-14 h-8 rounded-full"></div>
                <div
                  class="dot absolute left-1 top-1 bg-white w-6 h-6 rounded-full transition transform"
                >
                </div>
              </div>
            </label>
          </div>
          <span class="text-gray-700 font-medium">Rocznie</span>
          <span
            class="bg-[#01DFEC] text-[#0B2360] px-3 py-1 rounded-full text-sm font-semibold"
          >
            Oszczędź do 20%
          </span>
