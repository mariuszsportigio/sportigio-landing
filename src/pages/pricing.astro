<script>
  // Dynamic pricing & i18n for pricing table
  document.addEventListener("DOMContentLoaded", () => {
    const currencySelect = /** @type {HTMLSelectElement | null} */ (
      document.getElementById("currency-select")
    );
    const billingToggle = /** @type {HTMLInputElement | null} */ (
      document.getElementById("billing-toggle")
    );

    const getLangFromPath = () => {
      const path = location.pathname.toLowerCase();
      if (path.startsWith("/en")) return "en";
      if (path.startsWith("/es")) return "es";
      if (path.startsWith("/de")) return "de";
      return "pl";
    };

    const lang = getLangFromPath();

    const dataNode = document.getElementById("pricing-data");
    const encodedCopy = dataNode?.getAttribute("data-copy") || "%7B%7D";
    const encodedAmounts = dataNode?.getAttribute("data-amounts") || "%7B%7D";

    /** @type {Record<string, any>} */
    const copy = JSON.parse(decodeURIComponent(encodedCopy));
    /** @type {Record<string, any>} */
    const amounts = JSON.parse(decodeURIComponent(encodedAmounts));

    const applyCopy = () => {
      const dict = copy?.[lang] || copy?.pl || {};
      document.querySelectorAll("[data-i18n]").forEach((el) => {
        const key = el.getAttribute("data-i18n") || "";
        const value = key.split(".").reduce((acc, k) => (acc ? acc[k] : undefined), dict);
        if (typeof value === "string") el.textContent = value;
      });
    };

    /**
     * @param {"PLN" | "USD" | "EUR"} currency
     * @param {number} value
     */
    const formatCurrency = (currency, value) => {
      const meta = amounts?.meta?.currencySymbols?.[currency];
      const num = new Intl.NumberFormat(undefined, {
        maximumFractionDigits: 0,
      }).format(value);
      if (!meta) return num;
      const sep = typeof meta.separator === "string" ? meta.separator : " ";
      return meta.position === "prefix"
        ? `${meta.symbol}${sep}${num}`
        : `${num}${sep}${meta.symbol}`;
    };

    const applyPrices = () => {
      const currency = /** @type {"PLN" | "USD" | "EUR"} */ (
        (currencySelect && currencySelect.value) || "PLN"
      );
      const isYearly = !!(billingToggle && billingToggle.checked);
      const cur = amounts?.[currency] || {};
      const perMonthKey = isYearly ? "yearlyPerMonth" : "monthly";
      const originalKey = isYearly ? "yearlyOriginalTotal" : "monthlyOriginal";

      document.querySelectorAll(".price").forEach((el) => {
        const plan = el.getAttribute("data-plan");
        if (!plan || !cur[plan]) return;
        const value = cur[plan][perMonthKey];
        el.textContent = formatCurrency(currency, value);
      });

      const perMonthText = (copy?.[lang]?.labels?.per_month || "/month");
      const perYearText = (copy?.[lang]?.labels?.per_year || "per year");

      document.querySelectorAll(".price-original").forEach((el) => {
        const plan = el.getAttribute("data-plan");
        if (!plan || !cur[plan]) return;
        const value = cur[plan][originalKey];
        if (isYearly) {
          el.textContent = `${formatCurrency(currency, value)} ${perYearText}`;
        } else {
          el.textContent = `${formatCurrency(currency, value)} ${perMonthText}`;
        }
      });

      document.querySelectorAll(".save-note").forEach((el) => {
        const plan = el.getAttribute("data-plan");
        if (!plan || !cur[plan]) return;
        if (isYearly) {
          const total = cur[plan].yearlyTotal;
          const template = copy?.[lang]?.labels?.pay_year || copy?.pl?.labels?.pay_year || "{total}";
          el.textContent = template.replace("{total}", formatCurrency(currency, total));
        } else {
          const base = cur[plan].monthlyOriginal;
          const now = cur[plan].monthly;
          const pct = base ? Math.round(((base - now) / base) * 100) : 0;
          const template = copy?.[lang]?.labels?.save || copy?.pl?.labels?.save || "{percent}%";
          el.textContent = template.replace("{percent}", String(pct));
        }
      });
    };

    applyCopy();
    applyPrices();

    billingToggle?.addEventListener("change", applyPrices);
    currencySelect?.addEventListener("change", applyPrices);
  });
</script>
