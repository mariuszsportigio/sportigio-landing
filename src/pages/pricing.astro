<script>
  // Billing toggle functionality
  document.addEventListener('DOMContentLoaded', () => {
    const toggle = document.getElementById('billing-toggle');
    const prices = document.querySelectorAll('[data-monthly], [data-yearly]');
    
    if (toggle) {
      toggle.addEventListener('change', (e) => {
        const isYearly = e.target.checked;
        
        prices.forEach(price => {
          if (isYearly && price.dataset.yearly) {
            price.textContent = price.dataset.yearly;
          } else if (!isYearly && price.dataset.monthly) {
            price.textContent = price.dataset.monthly;
          }
        });
      });
    }
  });
</script> 