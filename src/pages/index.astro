---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Hero from "../components/Hero.astro";
import Footer from "../components/Footer.astro";
import SimpleFeature from "../components/SimpleFeature.astro";
import TrustedClubsSection from "../components/TrustedClubsSection.astro";
import { defaultLanguage } from "../i18n";

// Domyślnie używamy polskiego dla strony głównej
const lang = defaultLanguage;
---

<Layout title="Sportigio - Zarządzanie klubem sportowym w jednej aplikacji">
  <Navbar lang={lang} />
  <main class="bg-white">
    <section id="hero">
      <Hero lang={lang} />
    </section>

    <!-- Zaufało nam slider z logotypami klubów -->
    <section id="zaufali-nam">
      <TrustedClubsSection />
    </section>

    <section class="py-12 bg-white">
      <div class="max-w-6xl mx-auto px-4">
        <div class="grid md:grid-cols-3 gap-6">
          <SimpleFeature
            title="Szybkie wdrożenie"
            description="Start w kilka minut. Bez skomplikowanej konfiguracji, gotowe dla Twojego klubu."
            iconPath="M13 7l5 5m0 0l-5 5m5-5H6"
            ctaVariant="link"
            ctaText="Dowiedz się więcej"
            ctaHref="/kitchen-sink"
          />
          <SimpleFeature
            title="Nowoczesne płatności"
            description="Automatyczne rozliczenia i przypomnienia. Bezpiecznie i wygodnie."
            iconPath="M12 8c-1.657 0-3 1.343-3 3v5h6v-5c0-1.657-1.343-3-3-3zm0-5a3 3 0 013 3v1H9V6a3 3 0 013-3z"
            ctaVariant="button"
            ctaText="Zobacz więcej"
            ctaHref="/pricing"
          />
          <SimpleFeature
            title="Komunikacja"
            description="Wiadomości, ogłoszenia i powiadomienia w jednym miejscu."
            iconPath="M7 8h10M7 12h6m5 8H6a2 2 0 01-2-2V6a2 2 0 012-2h12a2 2 0 012 2v12a2 2 0 01-2 2z"
            ctaVariant="none"
          />
        </div>
      </div>
    </section>
  </main>
  <Footer lang={lang} />
</Layout>

<style>
  main {
    min-height: 100vh;
  }
</style>
