---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Hero from "../components/Hero.astro";
import Footer from "../components/Footer.astro";
import CTASection from "../components/CTASection.astro";
import FAQ from "../components/FAQ.astro";
import SimpleFeature from "../components/SimpleFeature.astro";
import TrustedClubsSection from "../components/TrustedClubsSection.astro";
import TestimonialCarousel from "../components/TestimonialCarousel.astro";
import TwoColumnMedia from "../components/TwoColumnMedia.astro";
import { defaultLanguage } from "../i18n";

// Domyślnie używamy polskiego dla strony głównej
const lang = defaultLanguage;
---

<Layout title="Sportigio - Zarządzanie klubem sportowym w jednej aplikacji">
  <Navbar lang={lang} />
  <div class="ks-scope">
    <main class="bg-white">
      <section id="hero">
        <Hero lang={lang} />
      </section>

      <!-- Zaufało nam slider z logotypami klubów -->
      <section id="zaufali-nam">
        <TrustedClubsSection />
      </section>
      <section id="testimonials">
        <TestimonialCarousel lang={lang} />
      </section>
      <TwoColumnMedia
        title="Profesjonalna strona internetowa klubu"
        imageSrc="/screens/website-preview-mobile.avif"
        imageAlt="Sportigio - Strona internetowa klubu"
        ctaVariant="button"
        ctaText="Zobacz więcej"
        ctaHref="/strona"
      >
        <ul class="space-y-4">
          <li class="flex items-start gap-3">
            <span class="material-symbols-rounded text-[#0B2360] mt-0.5"
              >rocket_launch</span
            >
            <div>
              <p class="text-gray-900 font-semibold">
                Szybki start i pewne działanie
              </p>
              <p class="text-gray-600">
                Działamy na gotowym i sprawdzonym dla sportu szablonie.
                Utrzymujemy łącznie ponad 100 stron.
              </p>
            </div>
          </li>
          <li class="flex items-start gap-3">
            <span class="material-symbols-rounded text-[#0B2360] mt-0.5"
              >edit_note</span
            >
            <div>
              <p class="text-gray-900 font-semibold">
                Samodzielna i prosta edycja
              </p>
              <p class="text-gray-600">
                Pokochasz panel admina za ułatwienia terminarza, sponsorów,
                bannerów, dodawania i edycji treści.
              </p>
            </div>
          </li>
          <li class="flex items-start gap-3">
            <span class="material-symbols-rounded text-[#0B2360] mt-0.5"
              >trending_up</span
            >
            <div>
              <p class="text-gray-900 font-semibold">37% wzrost popularności</p>
              <p class="text-gray-600">
                Porównując roczne statystyki odsłon, strony w Sportigio generują
                ok. 37% więcej odsłon.
              </p>
            </div>
          </li>
        </ul>
      </TwoColumnMedia>
      <TwoColumnMedia
        title="Sprzedawaj bilety online"
        imageSrc="/screens/tickets-preview-mobile.avif"
        imageAlt="Sportigio - Bilety online"
        reverse={true}
        ctaVariant="button"
        ctaText="Zobacz więcej"
        ctaHref="/bilety-online"
      >
        <ul class="space-y-4">
          <li class="flex items-start gap-3">
            <span class="material-symbols-rounded text-[#0B2360] mt-0.5"
              >bolt</span
            >
            <div>
              <p class="text-gray-900 font-semibold">
                Prostota i elegancja = KONWERSJA
              </p>
              <p class="text-gray-600">
                Szybki i łatwy proces zakupu, bez wychodzenia ze strony
                klubowej.
              </p>
            </div>
          </li>
          <li class="flex items-start gap-3">
            <span class="material-symbols-rounded text-[#0B2360] mt-0.5"
              >qr_code_scanner</span
            >
            <div>
              <p class="text-gray-900 font-semibold">
                Kontrola biletów w telefonie
              </p>
              <p class="text-gray-600">
                Kontrolerem biletów może być każdy z telefonem i przeglądarką.
              </p>
            </div>
          </li>
          <li class="flex items-start gap-3">
            <span class="material-symbols-rounded text-[#0B2360] mt-0.5"
              >trending_up</span
            >
            <div>
              <p class="text-gray-900 font-semibold">
                38% większa szansa na lojalność
              </p>
              <p class="text-gray-600">
                Budujemy bazę kibiców i zwiększamy szanse na ponowne zakupy.
              </p>
            </div>
          </li>
        </ul>
      </TwoColumnMedia>
    </main>
    <!-- Sklep internetowy: dwie opcje -->
    <section class="py-16 bg-white">
      <div class="max-w-6xl mx-auto px-4">
        <div class="mb-10 text-center">
          <h2
            class="text-2xl lg:text-3xl font-black text-gray-900 mb-2 font-poppins"
          >
            Sklep internetowy
          </h2>
          <p class="text-gray-600">Oferujemy dwie opcje sklepu internetowego</p>
        </div>
        <div class="grid md:grid-cols-2 gap-6">
          <SimpleFeature
            title="Sprzedaż online w Sportigio"
            description='Zlecasz sprzedaż gadżetów do Sportigio w formule "druk na żądanie"'
            iconImageSrc="/sportigio-sygnet.png"
            ctaVariant="none"
            alignment="left"
          />
          <SimpleFeature
            title="Własny sklep internetowy"
            description="Prowadzisz własny sklep internetowy z kontrolą magazynów, płatności, itp."
            iconName="storefront"
            ctaVariant="none"
            alignment="left"
          />
        </div>
      </div>
    </section>
    <section id="faq">
      <FAQ />
    </section>
    <section id="cta">
      <CTASection />
    </section>
    <Footer lang={lang} />
  </div>
</Layout>

<style>
  main {
    min-height: 100vh;
  }
</style>
<style is:global>
  /* Constrain containers to Hero width (max-w-5xl = 64rem) like /kitchen-sink */
  .ks-scope .container,
  .ks-scope .container-default,
  .ks-scope .container-wide,
  .ks-scope .max-w-6xl,
  .ks-scope .max-w-7xl,
  .ks-scope .xl\:container {
    max-width: 64rem !important;
  }
</style>
