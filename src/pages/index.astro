---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Hero from "../components/Hero.astro";
import Footer from "../components/Footer.astro";
import CTASection from "../components/CTASection.astro";
import FAQ from "../components/FAQ.astro";
import SimpleFeature from "../components/SimpleFeature.astro";
import TrustedClubsSection from "../components/TrustedClubsSection.astro";
import { defaultLanguage } from "../i18n";

// Domyślnie używamy polskiego dla strony głównej
const lang = defaultLanguage;
---

<Layout title="Sportigio - Zarządzanie klubem sportowym w jednej aplikacji">
  <Navbar lang={lang} />
  <main class="bg-white">
    <section id="hero">
      <Hero lang={lang} />
    </section>

    <!-- Zaufało nam slider z logotypami klubów -->
    <section id="zaufali-nam">
      <TrustedClubsSection />
    </section>
  </main>
  <!-- Sklep internetowy: dwie opcje -->
  <section class="py-16 bg-white">
    <div class="max-w-6xl mx-auto px-4">
      <div class="mb-10 text-center">
        <h2
          class="text-2xl lg:text-3xl font-black text-gray-900 mb-2 font-poppins"
        >
          Sklep internetowy
        </h2>
        <p class="text-gray-600">Oferujemy dwie opcje sklepu internetowego</p>
      </div>
      <div class="grid md:grid-cols-2 gap-6">
        <SimpleFeature
          title="Sprzedaż online w Sportigio"
          description='Zlecasz sprzedaż gadżetów do Sportigio w formule "druk na żądanie"'
          iconImageSrc="/sportigio-sygnet.png"
          ctaVariant="none"
          alignment="left"
        />
        <SimpleFeature
          title="Własny sklep internetowy"
          description="Prowadzisz własny sklep internetowy z kontrolą magazynów, płatności, itp."
          iconName="storefront"
          ctaVariant="none"
          alignment="left"
        />
      </div>
    </div>
  </section>
  <section id="faq">
    <FAQ />
  </section>
  <section id="cta">
    <CTASection />
  </section>
  <Footer lang={lang} />
</Layout>

<style>
  main {
    min-height: 100vh;
  }
</style>
