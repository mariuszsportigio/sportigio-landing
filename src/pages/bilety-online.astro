---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import CTASection from "../components/CTASection.astro";
import Hero from "../components/Hero.astro";
import TicketsHowItWorks from "../components/TicketsHowItWorks.astro";
import { defaultLanguage, type Language } from "../i18n";

interface Props {
  lang?: Language;
}
const { lang = defaultLanguage } = Astro.props as Props;
---

<Layout title="Sportigio â€“ Bilety online">
  <Navbar lang={lang} activePage="bilety-online" />
  <div aria-hidden="true" class="h-16"></div>

  <main class="bg-white min-h-screen">
    <Hero
      lang={lang}
      title="Sprzedawaj bilety online"
      titleHighlight=""
      imageSrc="/screens/tickets-preview-mobile.avif"
      imageAlt="Sportigio - Bilety online"
      imageSize="small"
      subtitle=""
      showBadge={false}
      showCTA={false}
      showSocialProof={false}
      spacing="compact"
      heightMode="short"
    />

    <TicketsHowItWorks />

    <CTASection />
  </main>

  <Footer lang={lang} />
</Layout>
