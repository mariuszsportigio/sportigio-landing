<script lang="ts">
  // Mobile menu toggle functionality
  document.addEventListener("DOMContentLoaded", () => {
    const mobileMenuButton = document.getElementById("mobile-menu-button");
    const mobileMenu = document.getElementById("mobile-menu");

    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener("click", () => {
        mobileMenu.classList.toggle("hidden");

        // Animate menu button
        const lines = mobileMenuButton.querySelectorAll("div > div");
        if (mobileMenu.classList.contains("hidden")) {
          // Close animation
          lines.forEach((line) => {
            if (line instanceof HTMLElement) {
              line.style.transform = "rotate(0deg)";
              line.style.opacity = "1";
            }
          });
        } else {
          // Open animation
          const l0 = lines.item(0);
          const l1 = lines.item(1);
          const l2 = lines.item(2);
          if (l0 instanceof HTMLElement)
            l0.style.transform = "rotate(45deg) translate(2px, 2px)";
          if (l1 instanceof HTMLElement) l1.style.opacity = "0";
          if (l2 instanceof HTMLElement)
            l2.style.transform = "rotate(-45deg) translate(2px, -2px)";
        }
      });

      // Close mobile menu when clicking on a link
      const mobileLinks = mobileMenu.querySelectorAll("a");
      mobileLinks.forEach((link) => {
        link.addEventListener("click", () => {
          mobileMenu.classList.add("hidden");
          const lines = mobileMenuButton.querySelectorAll("div > div");
          lines.forEach((line) => {
            if (line instanceof HTMLElement) {
              line.style.transform = "rotate(0deg)";
              line.style.opacity = "1";
            }
          });
        });
      });
    }

    // Enhanced navbar scroll effect
    let lastScrollY = window.scrollY;

    window.addEventListener("scroll", () => {
      const navbar = document.querySelector("nav");
      const currentScrollY = window.scrollY;

      if (!(navbar instanceof HTMLElement)) {
        lastScrollY = currentScrollY;
        return;
      }

      if (currentScrollY > 50) {
        navbar.style.background = "rgba(255, 255, 255, 0.95)";
        navbar.style.backdropFilter = "blur(24px)";
        navbar.style.borderBottom = "1px solid rgba(11, 35, 96, 0.1)";
      } else {
        navbar.style.background = "rgba(255, 255, 255, 0.85)";
        navbar.style.backdropFilter = "blur(20px)";
        navbar.style.borderBottom = "1px solid rgba(11, 35, 96, 0.08)";
      }

      if (currentScrollY > lastScrollY && currentScrollY > 200) {
        // Scrolling down
        navbar.style.transform = "translateY(-100%)";
      } else {
        // Scrolling up
        navbar.style.transform = "translateY(0)";
      }

      lastScrollY = currentScrollY;
    });
  });
</script>
