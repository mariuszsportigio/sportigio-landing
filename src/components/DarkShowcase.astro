---
// DarkShowcase.astro
---

<section id="app-showcase" class="py-12 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="bg-black rounded-3xl p-8 lg:p-12 relative overflow-hidden">
      <!-- Animated background elements -->
      <div class="absolute inset-0 overflow-hidden">
        <!-- Pulsing orbs -->
        <div class="absolute top-20 left-20 w-32 h-32 bg-[#0B2360]/20 rounded-full blur-xl animate-pulse"></div>
        <div class="absolute bottom-20 right-20 w-40 h-40 bg-[#01DFEC]/15 rounded-full blur-xl animate-pulse delay-1000"></div>
        <div class="absolute top-1/2 left-1/3 w-24 h-24 bg-[#EA36E1]/15 rounded-full blur-lg animate-pulse delay-2000"></div>
        
        <!-- Floating particles -->
        <div class="absolute top-10 right-1/4 w-2 h-2 bg-white/30 rounded-full animate-bounce delay-500"></div>
        <div class="absolute bottom-1/4 left-10 w-1 h-1 bg-[#01DFEC]/50 rounded-full animate-bounce delay-1500"></div>
        <div class="absolute top-1/3 right-10 w-1.5 h-1.5 bg-[#0B2360]/40 rounded-full animate-bounce delay-2500"></div>
        
        <!-- Grid pattern -->
        <div class="absolute inset-0 opacity-10">
          <div class="grid grid-cols-12 h-full">
            <div class="border-r border-white/10"></div>
            <div class="border-r border-white/10"></div>
            <div class="border-r border-white/10"></div>
            <div class="border-r border-white/10"></div>
            <div class="border-r border-white/10"></div>
            <div class="border-r border-white/10"></div>
            <div class="border-r border-white/10"></div>
            <div class="border-r border-white/10"></div>
            <div class="border-r border-white/10"></div>
            <div class="border-r border-white/10"></div>
            <div class="border-r border-white/10"></div>
            <div class="border-r border-white/10"></div>
          </div>
        </div>
      </div>

      <div class="relative z-10 flex flex-col lg:flex-row items-center gap-8 lg:gap-12">
        <!-- Left Content -->
        <div class="flex-1 text-center lg:text-left">
          <!-- Logo -->
          <div class="flex items-center mb-4">
            <img src="/sportigio-logo-white.png" alt="Sportigio" class="h-8 w-auto" />
          </div>

          <!-- Title and description -->
          <h2 class="text-2xl lg:text-3xl font-bold font-poppins text-white mb-4 leading-tight">
            Zarządzaj klubem <br />
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#01DFEC] to-[#EA36E1]">
              z dowolnego miejsca
            </span>
          </h2>
          
          <p class="text-gray-300 text-base mb-6 leading-relaxed max-w-md">
            Nasza mobilna aplikacja pozwala trenerom i zawodnikom być zawsze w kontakcie. 
            Sprawdź treningi, komunikuj się z zespołem i śledź postępy - wszystko w jednej aplikacji.
          </p>

          <!-- Features list -->
          <ul class="space-y-3 text-gray-300 text-sm mb-6">
            <li class="flex items-center">
              <div class="w-5 h-5 bg-gradient-to-r from-[#0B2360] to-[#01DFEC] rounded-full flex items-center justify-center mr-3">
                <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </div>
              Powiadomienia push w czasie rzeczywistym
            </li>
            <li class="flex items-center">
              <div class="w-5 h-5 bg-gradient-to-r from-[#01DFEC] to-[#EA36E1] rounded-full flex items-center justify-center mr-3">
                <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </div>
              Offline synchronizacja danych
            </li>
            <li class="flex items-center">
              <div class="w-5 h-5 bg-gradient-to-r from-[#EA36E1] to-[#0B2360] rounded-full flex items-center justify-center mr-3">
                <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </div>
              Dostęp do wszystkich funkcji
            </li>
          </ul>

          <!-- Download buttons -->
          <div class="flex flex-col sm:flex-row gap-3">
            <button class="flex items-center justify-center px-4 py-2 bg-white text-black rounded-lg hover:bg-gray-100 transition-all text-sm">
              <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24" fill="currentColor">
                <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
              </svg>
              App Store
            </button>
            <button class="flex items-center justify-center px-4 py-2 bg-white text-black rounded-lg hover:bg-gray-100 transition-all text-sm">
              <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24" fill="currentColor">
                <path d="M3,20.5V3.5C3,2.91 3.34,2.39 3.84,2.15L13.69,12L3.84,21.85C3.34,21.6 3,21.09 3,20.5M16.81,15.12L6.05,21.34L14.54,12.85L16.81,15.12M20.16,10.81C20.5,11.08 20.75,11.5 20.75,12C20.75,12.5 20.53,12.9 20.18,13.18L17.89,14.5L15.39,12L17.89,9.5L20.16,10.81M6.05,2.66L16.81,8.88L14.54,11.15L6.05,2.66Z"/>
              </svg>
              Google Play
            </button>
          </div>
        </div>

        <!-- Right Content - Mobile mockup -->
        <div class="flex-1 flex justify-center lg:justify-end">
          <div class="relative">
            <!-- Main phone mockup with glow -->
            <div class="relative">
              <!-- Glow effect -->
              <div class="absolute inset-0 bg-gradient-to-r from-blue-500/20 to-cyan-400/20 rounded-3xl blur-2xl scale-110"></div>
              
              <!-- Phone frame -->
              <div class="relative bg-gray-900 rounded-3xl p-2 shadow-2xl">
                <div class="bg-black rounded-2xl overflow-hidden w-64 h-[500px] relative">
                  <!-- Notch -->
                  <div class="absolute top-0 left-1/2 transform -translate-x-1/2 w-32 h-6 bg-gray-900 rounded-b-xl z-10"></div>
                  
                  <!-- Screen content -->
                  <div class="h-full bg-gradient-to-br from-gray-900 to-black p-4 pt-8">
                    <!-- Header -->
                    <div class="flex items-center justify-between mb-6">
                      <div class="flex items-center space-x-2">
                        <div class="w-6 h-6 bg-gradient-to-r from-[#0B2360] to-[#01DFEC] rounded-lg"></div>
                        <span class="text-white text-sm font-semibold">Sportigio</span>
                      </div>
                      <div class="w-6 h-6 bg-gray-700 rounded-full"></div>
                    </div>

                    <!-- Today's training card -->
                    <div class="bg-gradient-to-r from-[#0B2360]/20 to-[#01DFEC]/20 border border-[#0B2360]/30 rounded-xl p-4 mb-4">
                      <div class="flex items-center justify-between mb-2">
                        <span class="text-[#01DFEC] text-xs font-medium">DZISIAJ</span>
                        <span class="text-white text-xs">18:00</span>
                      </div>
                      <h3 class="text-white text-sm font-semibold mb-1">Trening drużynowy</h3>
                      <p class="text-gray-400 text-xs">Hala Sportowa, ul. Sportowa 1</p>
                      <div class="flex items-center mt-2">
                        <div class="flex -space-x-1">
                          <div class="w-4 h-4 bg-[#0B2360] rounded-full border border-gray-800"></div>
                          <div class="w-4 h-4 bg-[#01DFEC] rounded-full border border-gray-800"></div>
                          <div class="w-4 h-4 bg-[#EA36E1] rounded-full border border-gray-800"></div>
                        </div>
                        <span class="text-gray-400 text-xs ml-2">+12 innych</span>
                      </div>
                    </div>

                    <!-- Quick actions -->
                    <div class="grid grid-cols-2 gap-3 mb-4">
                      <div class="bg-gray-800/50 rounded-lg p-3 text-center">
                        <div class="w-6 h-6 bg-[#01DFEC] rounded-lg mx-auto mb-1"></div>
                        <span class="text-white text-xs">Obecność</span>
                      </div>
                      <div class="bg-gray-800/50 rounded-lg p-3 text-center">
                        <div class="w-6 h-6 bg-[#EA36E1] rounded-lg mx-auto mb-1"></div>
                        <span class="text-white text-xs">Wiadomości</span>
                      </div>
                    </div>

                    <!-- Recent activity -->
                    <div class="space-y-2">
                      <div class="flex items-center p-2 bg-gray-800/50 rounded-lg">
                        <div class="w-8 h-8 bg-[#0B2360] rounded-full flex items-center justify-center">
                          <span class="text-white text-xs">✓</span>
                        </div>
                        <div class="ml-2 flex-1">
                          <p class="text-white text-xs">Anna dołączyła</p>
                          <p class="text-gray-400 text-xs">2 min temu</p>
                        </div>
                      </div>
                      
                      <div class="flex items-center p-2 bg-gray-800/50 rounded-lg">
                        <div class="w-8 h-8 bg-[#01DFEC] rounded-full flex items-center justify-center">
                          <span class="text-white text-xs">💬</span>
                        </div>
                        <div class="ml-2 flex-1">
                          <p class="text-white text-xs">Nowa wiadomość</p>
                          <p class="text-gray-400 text-xs">5 min temu</p>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Floating elements -->
            <div class="absolute -top-4 -right-4 w-16 h-16 bg-gradient-to-r from-[#0B2360]/20 to-[#01DFEC]/20 rounded-full blur-xl animate-pulse"></div>
            <div class="absolute -bottom-6 -left-6 w-20 h-20 bg-gradient-to-r from-[#EA36E1]/15 to-[#0B2360]/15 rounded-full blur-xl animate-pulse delay-1000"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-20px); }
  }
  
  .animate-float {
    animation: float 6s ease-in-out infinite;
  }
  
  .animate-float-delayed {
    animation: float 6s ease-in-out infinite 2s;
  }
</style> 