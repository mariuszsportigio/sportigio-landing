---
// Hero.astro
import { createTranslator, type Language } from '../i18n';

export interface Props {
  lang?: Language;
}

const { lang = 'pl' } = Astro.props;
const t = createTranslator(lang);
---

<section class="hero-glassmorphism relative pt-24 pb-16 min-h-screen max-h-screen flex items-center overflow-hidden">
  <div class="max-w-5xl mx-auto px-4 relative z-10 w-full">
    <div class="grid lg:grid-cols-2 gap-8 items-center">
      <!-- Left Content -->
      <div class="text-center lg:text-left">
        <!-- Badge with glassmorphism -->
        <div class="inline-flex items-center px-4 py-2 bg-white/10 backdrop-blur-sm border border-white/20 text-blue-700 rounded-full text-sm font-medium mb-5">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
          {t('hero.badge')}
        </div>
        
        <!-- Heading -->
        <h1 class="text-3xl lg:text-5xl font-black text-gray-900 mb-5 leading-tight font-poppins">
          {t('hero.title')}
          <span class="block text-transparent bg-clip-text bg-gradient-to-r from-[#0B2360] to-[#01DFEC]">
            {t('hero.title_highlight')}
          </span>
        </h1>
        
        <!-- Subheading -->
        <p class="text-base lg:text-lg text-gray-600 mb-6 max-w-lg leading-relaxed">
          {t('hero.subtitle')}
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-3 mb-8">
          <!-- Style 1: Gradient Primary (Default) -->
          <button class="btn-style-1 px-6 py-3 text-white font-semibold rounded-lg hover:scale-105 transition-all duration-200 shadow-lg text-sm">
            {t('common.try_free')}
          </button>
          
          <!-- Style 3: Outline Navy -->
          <button class="btn-style-3 px-6 py-3 font-semibold rounded-lg hover:scale-105 transition-all duration-200 text-sm">
            {t('common.see_demo')}
          </button>
        </div>

        <!-- Social Proof -->
        <div class="flex items-center gap-5 text-sm text-gray-500">
          <div class="flex items-center">
            <div class="flex -space-x-1 mr-2">
              <div class="w-6 h-6 bg-gradient-to-r from-[#0B2360] to-[#01DFEC] rounded-full border-2 border-white"></div>
              <div class="w-6 h-6 bg-gradient-to-r from-[#01DFEC] to-[#EA36E1] rounded-full border-2 border-white"></div>
              <div class="w-6 h-6 bg-gradient-to-r from-[#EA36E1] to-[#0B2360] rounded-full border-2 border-white"></div>
            </div>
            <span>{t('hero.social_proof_clubs')}</span>
          </div>
          <div class="flex items-center">
            <svg class="w-4 h-4 text-yellow-400 mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
            </svg>
            <span>{t('hero.social_proof_rating')}</span>
          </div>
        </div>
      </div>

      <!-- Right Content - Main Image -->
      <div class="relative">
        <!-- Main Image -->
        <div class="relative z-10 max-w-md mx-auto lg:max-w-lg">
          <img 
            src="/screens/analytics_01.png" 
            alt="Sportigio Analytics Dashboard" 
            class="w-full h-auto rounded-xl shadow-xl"
          />
        </div>

        <!-- Enhanced floating cards with glassmorphism -->
        <div class="absolute -top-2 -right-2 bg-white/80 backdrop-blur-xl rounded-lg shadow-lg p-2 z-20 border border-white/50">
          <div class="flex items-center space-x-2">
            <div class="w-7 h-7 bg-gradient-to-r from-[#01DFEC] to-[#0B2360] rounded-lg flex items-center justify-center">
              <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
              </svg>
            </div>
            <div>
              <div class="text-sm font-bold text-gray-900">1.2k</div>
              <div class="text-xs text-gray-500">Nowi cz≈Çonkowie</div>
            </div>
          </div>
        </div>

        <div class="absolute -bottom-2 -left-2 bg-white/80 backdrop-blur-xl rounded-lg shadow-lg p-2 z-20 border border-white/50">
          <div class="flex items-center space-x-2">
            <div class="w-7 h-7 bg-gradient-to-r from-[#EA36E1] to-[#0B2360] rounded-lg flex items-center justify-center">
              <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            </div>
            <div>
              <div class="text-sm font-bold text-gray-900">95%</div>
              <div class="text-xs text-gray-500">Zadowolenie</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section> 