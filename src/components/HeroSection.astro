<!-- Hero Section -->
<section
  class="relative min-h-screen bg-gradient-to-br from-slate-50 to-blue-50 overflow-hidden"
>
  <!-- Smooth Glow Background Elements -->
  <div class="absolute inset-0 pointer-events-none">
    <!-- Subtle glow effects instead of harsh circles -->
    <div
      class="absolute top-20 left-10 w-80 h-80 smooth-glow-primary float-animation"
    >
    </div>
    <div
      class="absolute top-40 right-20 w-96 h-96 smooth-glow float-animation-reverse"
    >
    </div>
    <div
      class="absolute bottom-20 left-1/3 w-72 h-72 smooth-glow-accent float-animation-delayed"
    >
    </div>
    <div
      class="absolute top-1/2 right-10 w-64 h-64 smooth-glow-primary float-animation"
    >
    </div>
  </div>

  <!-- Subtle floating particles -->
  <div class="particles-bg">
    <div
      class="particle"
      style="left: 15%; animation-delay: 0s; animation-duration: 18s;"
    >
    </div>
    <div
      class="particle"
      style="left: 25%; animation-delay: 3s; animation-duration: 22s;"
    >
    </div>
    <div
      class="particle"
      style="left: 45%; animation-delay: 6s; animation-duration: 20s;"
    >
    </div>
    <div
      class="particle"
      style="left: 65%; animation-delay: 2s; animation-duration: 24s;"
    >
    </div>
    <div
      class="particle"
      style="left: 85%; animation-delay: 8s; animation-duration: 19s;"
    >
    </div>
  </div>

  <div
    class="relative z-10 container mx-auto px-6 py-16 lg:py-24 desktop-scale"
  >
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <!-- Left Column - Content -->
      <div class="space-y-6 lg:space-y-8 scroll-animate">
        <!-- Badge -->
        <div
          class="inline-flex items-center px-5 py-2.5 glass-morphism rounded-full text-navy-700 font-medium float-animation"
        >
          <span
            class="w-2 h-2 bg-gradient-to-r from-primary to-secondary rounded-full mr-3 animate-pulse"
          ></span>
          Nowa era zarządzania klubem
        </div>

        <!-- Main Heading -->
        <h1 class="text-4xl lg:text-6xl xl:text-7xl font-black leading-tight">
          <span class="block text-gradient-navy mb-3">Komunikacja klubu</span>
          <span class="block text-primary text-glow">w 1 prostej</span>
          <span
            class="block bg-gradient-to-r from-secondary to-accent bg-clip-text text-transparent"
            >aplikacji</span
          >
        </h1>

        <!-- Subheading -->
        <p
          class="text-lg lg:text-xl text-gray-600 font-light leading-relaxed max-w-xl"
        >
          Uprość komunikację zespołu, zarządzaj harmonogramami i śledź wyniki w
          jednej potężnej platformie zaprojektowanej specjalnie dla klubów
          sportowych.
        </p>

        <!-- CTA Button -->
        <div class="flex flex-col sm:flex-row gap-4 pt-6">
          <button
            class="px-12 py-5 bg-gradient-to-r from-primary to-secondary text-white font-bold text-xl rounded-2xl hover:scale-105 transition-all duration-300 shadow-xl hover:shadow-primary/25 btn-glow"
          >
            Zacznij za darmo
          </button>
        </div>

        <!-- Stats -->
        <div class="grid grid-cols-3 gap-6 pt-8">
          <div class="text-center card-3d hover-lift">
            <div
              class="text-3xl lg:text-4xl font-black text-gradient-navy mb-1"
            >
              500+
            </div>
            <div class="text-gray-600 font-medium text-sm">
              Aktywnych klubów
            </div>
          </div>
          <div class="text-center card-3d hover-lift">
            <div
              class="text-3xl lg:text-4xl font-black text-gradient-navy mb-1"
            >
              50k+
            </div>
            <div class="text-gray-600 font-medium text-sm">
              Zadowolonych sportowców
            </div>
          </div>
          <div class="text-center card-3d hover-lift">
            <div
              class="text-3xl lg:text-4xl font-black text-gradient-navy mb-1"
            >
              98%
            </div>
            <div class="text-gray-600 font-medium text-sm">
              Wskaźnik satysfakcji
            </div>
          </div>
        </div>
      </div>

      <!-- Right Column - Hero Visual -->
      <div class="relative scroll-animate">
        <!-- Main Dashboard Mockup -->
        <div class="relative z-20 float-animation">
          <div
            class="glass-card rounded-3xl overflow-hidden transform perspective-1000 card-3d border-navy-glow"
          >
            <!-- Dashboard Header -->
            <div class="bg-navy-gradient p-5">
              <div class="flex items-center justify-between">
                <h3 class="text-white font-bold text-xl">Dzisiejszy plan</h3>
                <div class="flex items-center space-x-3">
                  <div
                    class="w-10 h-10 bg-white/20 rounded-xl flex items-center justify-center float-animation-delayed glass-morphism"
                  >
                    <div class="w-5 h-5 bg-accent rounded-full"></div>
                  </div>
                  <span class="text-white/90 font-medium">Aktywny</span>
                </div>
              </div>
            </div>

            <!-- Dashboard Content -->
            <div class="p-5 space-y-4 bg-white/50 backdrop-blur-sm">
              <!-- Training Session -->
              <div
                class="flex items-center p-3 glass-card rounded-xl border-navy-glow hover-lift"
              >
                <div
                  class="w-12 h-12 bg-gradient-to-r from-primary to-secondary rounded-xl flex items-center justify-center mr-3 float-animation"
                >
                  <div class="w-6 h-6 bg-white rounded-lg"></div>
                </div>
                <div class="flex-1">
                  <h4 class="font-bold text-lg text-primary">
                    Poranny trening
                  </h4>
                  <p class="text-gray-600">08:00 - 10:00</p>
                </div>
              </div>

              <!-- Team Meeting -->
              <div
                class="flex items-center p-3 glass-morphism rounded-xl hover-lift"
              >
                <div
                  class="w-12 h-12 bg-gray-200 rounded-xl flex items-center justify-center mr-3 float-animation-reverse"
                >
                  <div class="w-6 h-6 bg-white rounded-lg"></div>
                </div>
                <div class="flex-1">
                  <h4 class="font-bold text-lg text-gray-500">
                    Spotkanie zespołu
                  </h4>
                  <p class="text-gray-400">14:00 - 15:00</p>
                </div>
                <span class="text-gray-400 font-medium">Nadchodzące</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Floating Glass Elements -->
        <div
          class="absolute -top-6 -right-6 w-20 h-20 glass-card rounded-2xl float-animation-delayed card-3d z-10 border-navy-glow"
        >
        </div>
        <div
          class="absolute -bottom-4 -left-4 w-16 h-16 glass-morphism rounded-2xl float-animation z-10"
        >
        </div>

        <!-- Glass Stats Cards -->
        <div
          class="absolute -top-8 left-6 glass-card rounded-xl p-3 shadow-xl float-animation card-3d z-30 border-navy-glow"
        >
          <div class="text-2xl font-black text-gradient-navy">1.2k</div>
          <div class="text-gray-600 text-xs font-medium">
            Aktywni członkowie
          </div>
        </div>

        <div
          class="absolute -bottom-6 right-8 glass-card rounded-xl p-3 shadow-xl float-animation-reverse card-3d z-30 border-navy-glow"
        >
          <div class="text-2xl font-black text-gradient-navy">95%</div>
          <div class="text-gray-600 text-xs font-medium">Frekwencja</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Subtle bottom gradient -->
  <div
    class="absolute bottom-0 left-0 right-0 h-32 bg-gradient-to-t from-white/20 to-transparent pointer-events-none"
  >
  </div>
</section>

<!-- Particle background container -->
<div class="particles-bg absolute inset-0 pointer-events-none">
  <!-- Additional particles will be added by JavaScript -->
</div>
